{
  "name": "boilerplate-react-ssr",
  "version": "1.0.0-alpha",
  "description": "boilerplate",
  "main": "index.js",
  "author": "alex@cardell.io",
  "private": true,
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-flow",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-syntax-import-meta",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-json-strings",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      "@babel/plugin-proposal-function-sent",
      "@babel/plugin-proposal-export-namespace-from",
      "@babel/plugin-proposal-numeric-separator",
      "@babel/plugin-proposal-throw-expressions"
    ]
  },
  "dependencies": {
    "express": "^4.16.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@storybook/react": "^4.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.0",
    "css-loader": "^1.0.0",
    "enzyme": "^3.5.1",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-css-modules": "^2.7.5",
    "eslint-plugin-flowtype": "^3.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "flow-bin": "^0.83.0",
    "flow-coverage-report": "^0.6.0",
    "flow-typed": "^2.5.1",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "jest-junit": "^5.2.0",
    "lint-staged": "^7.2.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.9.3",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.10.2",
    "prop-types": "^15.6.2",
    "react-hot-loader": "^3.1.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^9.3.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.3.1",
    "supertest": "^3.3.0",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "flow-coverage-report": {
    "globIncludePatterns": [
      "src/**/*.{js,jsx}"
    ],
    "globExcludePatterns": [
      "src/**/*/__tests__/**/*"
    ],
    "threshold": "95",
    "outputDir": "coverage/flow"
  },
  "lint-staged": {
    "ignore": [
      "package.json"
    ],
    "linters": {
      "*.{js,jsx}": [
        "eslint --fix",
        "jest --findRelatedTests",
        "git add"
      ],
      "*.{json,md,graphql}": [
        "prettier --write",
        "git add"
      ],
      "*.{css,scss,sass}": [
        "prettier --write",
        "stylelint --fix",
        "git add"
      ],
      ".circleci/config.{y,ya}ml": [
        "circleci config validate"
      ]
    }
  },
  "scripts": {
    "clean": "rm -rf node_modules",
    "fix": "yarn fix-js && yarn fix-css",
    "fix:css": "yarn lint:css --fix",
    "fix:js": "yarn lint:js --fix",
    "flow:cover": "flow-coverage-report",
    "lint": "flow check && yarn lint:js && yarn lint:css",
    "lint:css": "stylelint \"scss/**/*.{css,less,styl,scss,sass,sss}\"",
    "lint:js": "eslint --ext js,jsx .",
    "precommit": "lint-staged",
    "sass": "node-sass --output ./public/ ./scss/",
    "start": "webpack --mode development && babel-node src/server/server.js",
    "storybook": "start-storybook -p 9001 -s ./public/",
    "storybook:static": "build-storybook -o docs/storybook -s ./public/",
    "test": "jest",
    "test:ci": "jest --coverage --ci --reporters=default --reporters=jest-junit",
    "test:cover": "yarn test --coverage",
    "test:watch": "yarn test --watch"
  }
}
